extends default

block content
    a.button-add-new-recipe(href=`/recipes-and-stuff/addnew`)
        | Add New Recipe
    div.container
        each recipe in recipes
            div.recipes
                div.recipes-image(style=`background: url('/recipes-and-stuff/images/${recipe.imgSrc}') top center
                no-repeat; background-size: cover;`)
                h2.recipes-name
                    | #{recipe.name}
                a(href=`/recipes-and-stuff/recipe?id=${recipe.id}` style="color:ghostwhite")
                    | Se opskrift